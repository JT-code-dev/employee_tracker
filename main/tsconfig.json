{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "outDir": "./dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "lib": ["ES2020"],
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  
  